
<h2>Health Wave Social</h2>
<table>
  <tr>
    <th class="span2">Name</th>
    <th class="span6">Content</th>
    <th class="span4"></th>
  </tr>

<% @statuses.each do |status| %>
  <tr>
    <td><%= status.name %></td>
    <td><%= status.content %></td>
    <td class="btn"><%= link_to 'Show', status %></td>
    <td class="btn"><%= link_to 'Edit', edit_status_path(status) %></td>
    <td class="btn"><%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
   </tr> 

<% end %>
</table>

<br />

<%= link_to 'New Status', new_status_path %>
